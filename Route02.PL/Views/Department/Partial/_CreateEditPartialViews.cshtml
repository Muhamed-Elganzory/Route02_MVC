@model Route02.PL.ViewModels.DepartmentViewModels.DepartmentViewModel

<div class="form-group mb-3">
    <label class="form-label" asp-for="Code"></label>
    <input asp-for="Code" class="form-control" />
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label class="form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span> 
</div>
<div class="form-group mb-3">
    <label class="form-label" asp-for="Description"></label>
    <textarea class="form-control" asp-for="Description"></textarea>
</div>
<div class="form-group mb-3">
    <label class="form-label" asp-for="CreatedOn"></label>
    <input  asp-for="CreatedOn" class="form-control" />
</div>

<div class="mt-4 m-auto">
    <input class="btn btn-primary" type="submit" value="@ViewData["ButtonText"]" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
</div>
