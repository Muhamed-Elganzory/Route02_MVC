@model IEnumerable<Route02.BLL.DTO.Employee.GetAllEmployeeDto>

@{
    ViewData["Title"] = "Employee";
}

@if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
        <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-success">Success!!</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Message"]
            </div>
        </div>
    </div>
}

<h1 class="my-3">All Employees</h1>
<a class="btn btn-primary my-2" asp-controller="Employee" asp-action="Create">Create Employee</a>

<div class="m-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-8">
            <input class="form-control" type="text" name="EmployeeSearchName"  placeholder="Search Employee By Name" value="@Context.Request.Query["EmployeeSearchName"]" >
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" >
        </div>
    </form>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.EmployeeType)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.DepartmentId)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                <th>@Html.DisplayNameFor(e => e.Gender)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Age</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.Salary</td>
                    <td>
                        @if (employee.IsActive)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td>@employee.Gender</td>

                    @*<td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@employee.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>*@
                    
                    @* Partial View *@
                    <partial name="_ButtonsPartialViews" model="employee.Id"/>
                    
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@employee.Id">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are You Sure to Delete Employee @employee.Name ?
                                    </div>
                                    <div class="modal-footer">
                                        <form method="post" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="mt-4">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <input type="submit" value="Delete" class="btn btn-danger"/>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">No Employees Found!</div>
}
